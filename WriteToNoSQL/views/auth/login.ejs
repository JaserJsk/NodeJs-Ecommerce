<%- include('../includes/admin/ad_head.ejs') %>
<link rel="stylesheet" type="text/css" href="/admin/plugins/toast-master/css/jquery.toast.css">
</head>

<body>

    <%- include('../includes/admin/preloader.ejs') %>

    <section id="wrapper" class="login-register login-sidebar" style="background-image:url(/admin/images/backgrounds/user-cred.jpg);">
        <div class="login-box card">
            <div class="card-body">
                <form class="form-horizontal form-material" id="loginform" action="/auth/login" method="POST">
                    <a href="" class="text-center db">
                        <img src="/admin/images/logos/logo-icon.png" alt="Home" />
                        <br />
                        <img src="/admin/images/logos/logo-text.png" alt="Home" />
                    </a>

                    <h3 class="box-title m-t-40 m-b-0">Login Now</h3><small>Login to your account!</small>

                    <div class="form-group m-t-40">
                        <div class="col-xs-12">
                            <input class="form-control" 
                                type="email" 
                                name="email" 
                                id="email"
                                value="<%= oldInput.email %>"
                                placeholder="Email" required>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-xs-12">
                            <input class="form-control" 
                                type="password" 
                                name="password" 
                                id="password"
                                value="<%= oldInput.password %>"
                                placeholder="Password" required>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12">
                            <div class="checkbox checkbox-primary pull-left p-t-0">
                                <input id="checkbox-signup" type="checkbox">
                                <label for="checkbox-signup"> Remember me </label>
                            </div>
                            <br/>
                            <a href="/auth/reset" id="to-recover" class="text-dark pull-right">
                                <i class="fa fa-lock m-r-5"></i>
                                Forgot password?
                            </a>
                        </div>
                    </div>

                    <div class="form-group text-center m-t-20">
                        <div class="col-xs-12">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <button class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">
                                Login now
                            </button>
                        </div>
                    </div>
                    
                    <div class="form-group m-b-0">
                        <div class="col-sm-12 text-center">
                            <p>Don't have an account? <a href="/auth/signup" class="text-primary m-l-5"><b>Signup</b></a></p>
                        </div>
                    </div>
                </form>

                <% if (errorMessage) { %>
                    <div class="alert alert-danger m-t-40">
                        <%= errorMessage %>
                    </div>
                <% } %>

            </div>
        </div>
    </section>

    <%- include('../includes/admin/ad_end.ejs') %>

    <script type="text/javascript" src="/admin/plugins/toast-master/js/jquery.toast.js"></script>