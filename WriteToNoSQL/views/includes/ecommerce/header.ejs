                                <button type="submit" class="btn btn-outline-info">Logout</button>
                            </form>
                        </li>
                        <li class="nav-item donate-btn" style="margin-left: 10px;">
                            <a href="/admin/dashboard" class="btn btn-outline-info">
                                Admin
                            </a>
                        </li>
                    <% } else { %>
                        <li class="nav-item donate-btn">
                            <a href="/auth/login" class="btn btn-outline-info">
