<%- include('../../includes/site/head.ejs') %>
<link rel="stylesheet" href="/css/shop.css">
<link href="/plugins/owl.carousel/dist/assets/owl.theme.green.css" rel="stylesheet">
</head>

<body>

    <div id="main-wrapper">

        <!-- ============================================================== -->
        <!-- Top header -->
        <div class="topbar">

            <div class="header14 po-relative">

                <% if (isAuthenticated) { %>
                    <%- include('../../includes/site/header.ejs', { userIsMerchant: user.isMerchant }) %>
                    <%- include('../../includes/site/navigation.ejs', { userIsMerchant: user.isMerchant }) %>
                <% } else { %>
                    <%- include('../../includes/site/header.ejs') %>
                    <%- include('../../includes/site/navigation.ejs') %>
                <% } %>

            </div>

        </div>

        <!-- ============================================================== -->
        <!-- Page wrapper -->
        <div class="page-wrapper">

            <!-- ============================================================== -->
            <!-- Container fluid -->
            <div class="container-fluid">

                <!-- ============================================================== -->
                <!-- Slider or Banner -->

                <div class="static-slider3">
                    <div class="container">
                        <div class="row justify-content-center ">
                            <!-- Column -->
                            <div class="col-md-8 align-self-center text-center" data-aos="fade-right" data-aos-duration="1200">
                                <h1 class="title">
                                    <b class="font-bold text-secondary">Product Detail</b> <br />
                                    <span class="text-info-gradiant typewrite" data-period="2000" data-type='[ "Read more about our product!" ]'>
                                    </span>
                                </h1>
                            </div>
                            <!-- Column -->
                        </div>
                    </div>
                </div>

                <!-- ============================================================== -->
                <!-- Content -->

                <div class="spacer">
                    <div class="container">
                        <div class="row m-t-30">

                            <!-- column  -->
                            <div class="col-lg-5">
                                <div class="owl-carousel owl-theme image-slide">
                                    <!-- item -->
                                    <div class="item"><img src="<%= product.imageUrl %>" class="img-responsive"
                                            alt="<%= product.title %>" /></div>
                                    <!-- item -->
                                    <div class="item"><img src="<%= product.imageUrl %>" class="img-responsive"
                                            alt="<%= product.title %>" /></div>
                                    <!-- item -->
                                    <div class="item"><img src="<%= product.imageUrl %>" class="img-responsive"
                                            alt="<%= product.title %>" /></div>
                                </div>
                            </div>
                            <!-- column  -->

                            <div class="col-lg-6 ml-auto">

                                <h4 class="title"><%= product.title %></h4>
                                
                                <h4 class="font-medium m-b-30">$<%= product.price %></h4>

                                <% if (isAuthenticated) { %>

                                <% if (user.isMerchant == 'off') { %>
                                    <form action="/cart" method="POST">
                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                        <button type="submit" class="btn btn-outline-info btn-md m-t-20">Add to Cart</button>
                                        <input type="hidden" name="productId" value="<%= product._id %>">
                                    </form>
                                <% } %>
                                
                                <% } else { %>
                                    
                                    <a href="/auth/login" class="btn btn-outline-info btn-md m-t-20">
                                        You need to Login before you can buy!
                                    </a>

                                <% } %>
                                
                            </div>

                        </div>

                        <div class="row m-t-40 m-b-40">
                            <div class="col-md-12">
                                <h5 class="title font-medium">Product Summery</h5>
                                <p><%= product.description %></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- ============================================================== -->
            <!-- Back to top -->
            <%- include('../../includes/site/back_to_top.ejs') %>

        </div>

        <!-- ============================================================== -->
        <!-- footer -->
        <%- include('../../includes/site/footer.ejs') %>

    </div>

    <%- include('../../includes/site/end.ejs') %>

    <script type="text/javascript" src="/js/type.js"></script>
    <script type="text/javascript" src="/plugins/owl.carousel/dist/owl.carousel.min.js"></script>

    <script>
        $('.image-slide').owlCarousel({
        autoplay: true,
        autoplayHoverPause: false,
        items: 1,
        loop: true,
        margin: 0,
        nav: false,
        dots: true

    })
    </script>