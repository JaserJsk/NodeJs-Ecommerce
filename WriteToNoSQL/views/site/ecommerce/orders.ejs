<%- include('../../includes/site/head.ejs') %>
<link rel="stylesheet" href="/css/shop.css">
</head>

<body>

    <div id="main-wrapper">

        <!-- ============================================================== -->
        <!-- Top header -->
        <div class="topbar">

            <div class="header14 po-relative">

                <% if (isAuthenticated) { %>
                    <%- include('../../includes/site/header.ejs', { userIsMerchant: user.isMerchant }) %>
                    <%- include('../../includes/site/navigation.ejs', { userIsMerchant: user.isMerchant }) %>
                <% } else { %>
                    <%- include('../../includes/site/header.ejs') %>
                    <%- include('../../includes/site/navigation.ejs') %>
                <% } %>

            </div>

        </div>

        <!-- ============================================================== -->
        <!-- Page wrapper -->
        <div class="page-wrapper">

            <!-- ============================================================== -->
            <!-- Container fluid -->
            <div class="container-fluid">

                <!-- ============================================================== -->
                <!-- Slider or Banner -->

                <div class="static-slider3">
                    <div class="container">
                        <div class="row justify-content-center ">
                            <!-- Column -->
                            <div class="col-md-8 align-self-center text-center" data-aos="fade-right" data-aos-duration="1200">
                                <h1 class="title">
                                    <b class="font-bold text-secondary">Orders</b> <br />
                                    <span class="text-info-gradiant typewrite" data-period="2000" data-type='[ "This is your order list!" ]'>
                                    </span>
                                </h1>
                            </div>
                            <!-- Column -->
                        </div>
                    </div>
                </div>

                <!-- ============================================================== -->
                <!-- Content -->

                <div class="spacer">
                    <div class="container">
                        <div class="row m-t-30">

                            <% if (orders.length <= 0) { %>

                            <h3>You have no orders!</h3>

                            <% } else { %>

                            <!-- column  -->
                            <div class="col-lg-12">

                                <table class="table shop-table">

                                    <thead>
                                        <tr>
                                            <th class="b-0 text-left">Title</th>
                                            <th class="b-0 text-center">Image</th>
                                            <th class="b-0 text-center">Quantity</th>
                                            <th class="b-0 text-right">Price</th>
                                        </tr>
                                    </thead>

                                    <% orders.forEach(order => { %>

                                    <tbody>

                                        <% order.products.forEach(op => { %>

                                        <tr>
                                            <td class="text-ellipsis">
                                                <%= op.product.title %>
                                            </td>

                                            <td class="text-center">
                                                <img src="/<%= op.product.imageUrl %>" alt="<%= op.product.title %>"
                                                    width="100" height="100">
                                            </td>

                                            <td class="text-center">
                                                <%= op.quantity %>
                                            </td>

                                            <td class="text-right">
                                                <h5>
                                                    $
                                                    <%= op.product.price * op.quantity  %>
                                                </h5>
                                            </td>

                                        </tr>

                                        <% }); %>

                                        <tr>
                                            <td colspan="3" class="product-id">
                                                <b>Order - </b> #
                                                <%= order._id %> - <a href="/orders/<%= order._id %>" target="_blank">Invoice</a>
                                            </td>
                                        </tr>

                                    </tbody>

                                    <% }); %>

                                </table>

                            </div>

                            <% } %>

                        </div>

                    </div>

                </div>

            </div>

            <!-- ============================================================== -->
            <!-- Back to top -->
            <%- include('../../includes/site/back_to_top.ejs') %>

        </div>

        <!-- ============================================================== -->
        <!-- footer -->
        <%- include('../../includes/site/footer.ejs') %>

    </div>

    <%- include('../../includes/site/end.ejs') %>

    <script type="text/javascript" src="/js/type.js"></script>