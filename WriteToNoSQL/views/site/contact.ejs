<%- include('../includes/site/head.ejs') %>
<link rel="stylesheet" href="/css/shop.css">
</head>

<body>

    <div id="main-wrapper">

        <!-- ============================================================== -->
        <!-- Top header -->
        <div class="topbar">

            <div class="header14 po-relative">

                <%- include('../includes/site/header.ejs') %>

                <%- include('../includes/site/navigation.ejs') %>

            </div>

        </div>

        <!-- ============================================================== -->
        <!-- Page wrapper -->
        <div class="page-wrapper">

            <!-- ============================================================== -->
            <!-- Container fluid -->
            <div class="container-fluid">

                <!-- ============================================================== -->
                <!-- Slider or Banner -->

                <div class="static-slider3">
                    <div class="container">
                        <div class="row justify-content-center ">
                            <!-- Column -->
                            <div class="col-md-8 align-self-center text-center" data-aos="fade-right" data-aos-duration="1200">
                                <h1 class="title">
                                    <b class="font-bold text-secondary">Contact</b> <br />
                                    <span class="text-info-gradiant typewrite" data-period="2000" data-type='[ "Contact us & get in touch!" ]'>
                                    </span>
                                </h1>
                            </div>
                            <!-- Column -->
                        </div>
                    </div>
                </div>

                <!-- ============================================================== -->
                <!-- Content -->

                <div class="spacer">
                    <div class="container">
                        <div class="col-sm-12">
                            <div class="card card-body">
                                <!-- Row  -->
                                <div class="row" data-aos="fade-right" data-aos-duration="1200">
                                    <div class="col-lg-4 col-md-4 col-sm-4">
                                        <div class="d-flex no-block c-detail p-l-0">
                                            <div class="m-r-20 align-self-center display-5">
                                                <i class="icon-Map-Marker"></i>
                                            </div>
                                            <div class="">
                                                <h6 class="font-medium">Address</h6>
                                                <p class="">
                                                    Kingdom of Sweden.
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-4 col-md-4 col-sm-4">
                                        <div class="d-flex no-block c-detail">
                                            <div class="m-r-20 align-self-center display-5">
                                                <i class="icon-Headset"></i>
                                            </div>
                                            <div class="">
                                                <h6 class="font-medium">Phone</h6>
                                                <p class="">
                                                    +251 546 9442
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-4 col-md-4 col-sm-4">
                                        <div class="d-flex no-block c-detail">
                                            <div class="m-r-20 align-self-center display-5">
                                                <i class="icon-Mail-Send"></i>
                                            </div>
                                            <div class="">
                                                <h6 class="font-medium">Email</h6>
                                                <p class="">
                                                    support@senseidev.com
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Row  -->
                                <form class="row form-material justify-content-center" data-aos="fade-left"
                                    data-aos-duration="1200" action="/contact" method="POST">

                                    <div class="form-group col-md-6 m-t-20">
                                        <label>Name</label>
                                        <input class="form-control " type="text" name="Name" id="Name" value=""
                                            placeholder="Your name...">
                                    </div>

                                    <div class="form-group col-md-6 m-t-20">
                                        <label>Email</label>
                                        <input class="form-control " type="email" name="email" id="email" value=""
                                            placeholder="Your email...">
                                    </div>

                                    <div class="form-group col-md-12 m-t-20">
                                        <div class="form-group m-t-10">
                                            <textarea class="form-control" rows="3" placeholder="Message"></textarea>
                                        </div>
                                    </div>

                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                                    <div class="form-group col-md-12 m-t-20">
                                        <button class="btn btn-outline-info m-r-10" type="submit">
                                            Send
                                        </button>
                                    </div>

                                </form>

                                <!-- Error Msg -->

                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- ============================================================== -->
            <!-- Back to top -->
            <%- include('../includes/site/back_to_top.ejs') %>

        </div>

        <!-- ============================================================== -->
        <!-- footer -->
        <%- include('../includes/site/footer.ejs') %>

    </div>

    <%- include('../includes/site/end.ejs') %>

    <script type="text/javascript" src="/js/type.js"></script>